{
  "version": 2,
  "builds": [
    { "src": "app/main.py", "use": "@vercel/python" },
    { "src": "static/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/compare", "dest": "app/main.py" },
    { "src": "/countries", "dest": "app/main.py" },
    { "src": "/health", "dest": "app/main.py" },
    { "src": "/test", "dest": "app/main.py" },
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/", "dest": "/static/index.html" }
  ]
}
